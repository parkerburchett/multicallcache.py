{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
        {
            "name": "Python: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "multicall",
            "justMyCode": true
        },
        {
            "name": "Not just my code",
            "type": "debugpy",
            "request": "launch",
            "module": "multicall",
            "justMyCode": false
        },
        {
            "name": "Python: Remote Attach, for pytest",
            "type": "debugpy",
            "request": "attach",
            "connect": {
              "host": "localhost",
              "port": 10001,
            },
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "."
              }
            ]
          },
    ]
}